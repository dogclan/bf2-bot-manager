{
    "$schema": "https://json-schema.org/schema",
    "type": "array",
    "minItems": 1,
    "uniqueItems": true,
    "description": "List of servers for which bots need to be run and managed",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "Server name",
                "examples": ["dog-rotation"]
            },
            "address": {
                "type": "string",
                "description": "Server IP address",
                "examples": ["135.125.56.26"],
                "pattern": "^((25[0-5]|(2[0-4]|1\\d|[1-9]|)\\d)\\.?\\b){4}$"
            },
            "port": {
                "type": "number",
                "description": "Server game port",
                "examples": [16472]
            },
            "queryPort": {
                "type": "number",
                "description": "Server query port (required if address is a private ip or queryDirectly is true)",
                "examples": [29900]
            },
            "mod": {
                "type": "string",
                "description": "Server mod name/path",
                "examples": ["mods/bf2"]
            },
            "slots": {
                "type": "number",
                "description": "Number of slots to fill with bots",
                "examples": [8],
                "multipleOf": 2
            },
            "reservedSlots": {
                "type": "number",
                "description": "Number of slots to keep free on the server as it fills up (reserved for real players)",
                "examples": [4],
                "multipleOf": 2
            },
            "autobalance": {
                "type": "boolean",
                "description": "Ensure same number of bots for both teams",
                "default": true
            },
            "queryDirectly": {
                "type": "boolean",
                "description": "Query the server directly instead of using the bflist API",
                "default": false
            },
            "bots": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                    "type": "object",
                    "properties": {
                        "basename": {
                            "type": "string",
                            "description": "Basename of the bot (manager will append suffix at runtime to create nickname)",
                            "examples": ["LucyFromLondon"]
                        },
                        "password": {
                            "type": "string",
                            "description": "Password for all accounts with this basename",
                            "examples": ["gas"]
                        }
                    },
                    "required": [
                        "basename",
                        "password"
                    ]
                }
            }
        },
        "required": [
            "name",
            "address",
            "port",
            "mod",
            "slots",
            "reservedSlots",
            "bots"
        ],
        "allOf": [
            {
                "if": {
                    "not": {
                        "properties": {
                            "queryDirectly": {
                                "const": false
                            }
                        }
                    }
                },
                "then": {
                    "required": [
                        "queryPort"
                    ]
                }
            },
            {
                "if": {
                    "properties": {
                        "address": {
                            "pattern": "((^127\\.)|(^10\\.)|(^172\\.1[6-9]\\.)|(^172\\.2[0-9]\\.)|(^172\\.3[0-1]\\.)|(^192\\.168\\.))"
                        }
                    }
                },
                "then": {
                    "required": [
                        "queryPort"
                    ]
                }
            }

        ]
    }
}
